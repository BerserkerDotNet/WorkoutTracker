<h3>@Props.Exercise.Name</h3>
<form>
	<div class="row">
		<div class="col-6">
			<img src="data:image/png;base64, @(Convert.ToBase64String(Props.Exercise.Icon))" width="150" height="150" alt="@Props.Exercise.Name" style="text-align: center;box-shadow: 5px 5px 5px grey;border-radius: 5px;border-color: grey;border-width: 0.5px;border-style: solid;" />
		</div>
		<div class="col-6">
			<RadzenBadge BadgeStyle="BadgeStyle.Success" Text="@($"Set #{Props.ExerciseSetNumber}")" />
			<div>
				@foreach (var muscle in Props.Exercise.Muscles)
				{
					<RadzenBadge BadgeStyle="BadgeStyle.Info" Text="@muscle" />
				}
			</div>
			<div style="padding-top: 10px">
				<RadzenLabel Text="Weight:" />
				<RadzenNumeric @bind-Value="logEntry.Weight" Placeholder="0" Name="Weight" class="@($"{Styles.Input} {Styles.InputWithButton}")" />
				<RadzenSelectBar @bind-Value="@_weightUnits" TValue="string" class="@Styles.WeightContainer">
					<Items>
						<RadzenSelectBarItem Text="KG" Value="KG" Style="padding:0 1em;width:50%;text-align:center" />
						<RadzenSelectBarItem Text="LB" Value="LB" Style="padding:0 1em;width:50%;text-align:center" />
					</Items>
				</RadzenSelectBar>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<RadzenButton Icon="chevron_left" ButtonStyle="ButtonStyle.Secondary" Click="() => Props.Previous.InvokeAsync(Props.PreviousExerciseId.Value)" Disabled="!Props.PreviousExerciseId.HasValue" />
			<StartStopButton IdleText="@($"Start set #{Props.ExerciseSetNumber}")" ActiveText="@($"Complete set #{Props.ExerciseSetNumber}")" OnStart="StartSet" OnEnd="EndSet" />
			<RadzenButton Icon="chevron_right" ButtonStyle="ButtonStyle.Secondary" Click="() => Props.Next.InvokeAsync(Props.NextExerciseId.Value)" Disabled="!Props.NextExerciseId.HasValue" />
		</div>
		@if (Props.Sets.Any())
		{
			int setNumber = Props.ExerciseSetNumber - 1;
			@foreach (var set in Props.Sets)
			{
				<div class="col-12">
					<RadzenCard>
						<h5 class="h5">Set #@(setNumber--)</h5>
						<div class="row">
							<div class="col-6">
								<div>Weigth:</div>
								<b>@set.Weight KG</b>
								<div class="mt-3">Repetitions:</div>
								<b>@set.Repetitions</b>
							</div>
							<div class="col-6">
								<div>Duration:</div>
								<b>@set.Duration</b>
								<div class="mt-3">Notes:</div>
								<b>@set.Note</b>
							</div>
							<div class="col-12">
								<div class="mt-3">Score:</div>
								<Rating MaxStars="5" Value="set.Score" IsReadonly="true" />
							</div>
						</div>
					</RadzenCard>
				</div>
			}
		}
		else
		{
			<div style="width:100%;text-align:center;margin-top:15px">Log a set to see results</div>
		}
	</div>
</form>