<MudForm>
    <MudTextField Label="Endpoint:" @bind-Value="Props.Url" />
    <MudTextField InputType="InputType.Password" Label="Key:" @bind-Value="Props.Secret" />
    <MudButton Variant="Variant.Filled" OnClick="() => Props.Save.InvokeAsync(new EndpointConfiguration(Props.Url, Props.Secret))">Save</MudButton>
</MudForm>

@code{
    [Parameter]
    public EditConfigurationProps Props { get; set; }
}