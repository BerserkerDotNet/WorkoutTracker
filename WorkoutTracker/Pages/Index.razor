@page "/"
@attribute [Authorize]
@inject IExerciseTimerService ExerciseTimer

<Header Title="Workout">
    <ExerciseTimerBadge TargetRestTime="TimeSpan.FromMinutes(2)" />
</Header>
<ExerciseScheduleConnected />

@code{
    protected override void OnInitialized()
    {
        if (!ExerciseTimer.IsRunning)
        {
            ExerciseTimer.Start();
        }
    }
}