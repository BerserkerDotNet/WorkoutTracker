<MudSelect T="ExerciseProfile"
		   Label="Profile"
		   Class="mb-4"
		   AnchorOrigin="Origin.BottomCenter"
		   ValueChanged="profile => Props.SetProfile(profile)"
		   Value="Props.SelectedProfile"
		   Variant="Variant.Text"
		   Adornment="Adornment.End"
		   AdornmentIcon="@Icons.Material.Filled.Refresh"
		   OnAdornmentClick="() => Props.GenerateSchedule()">
	<Foreach Items="ExerciseProfile.Profiles" Context="item">
		<MudSelectItem Value="@item">@item.Name</MudSelectItem>
	</Foreach>
</MudSelect>

@code {

	[Parameter]
	public ExerciseProfileSelectorProps Props { get; set; }
}