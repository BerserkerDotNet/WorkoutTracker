<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="90dip">
    <Spinner
        android:id="@+id/add_exercise_exerciseid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/add_exercise_reps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="# of repetitions"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/add_exercise_weight"
            android:layout_width="323.0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Weight"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weightUnits"
            android:layout_toRightOf="@+id/add_exercise_weight"
            android:textOn="Lb"
            android:textOff="Kg"
            android:checked="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/add_exercise_duration"
            android:layout_width="314.0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Duration"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/durationStartStop"
            android:layout_toRightOf="@+id/add_exercise_duration"
            android:textOn="Stop"
            android:textOff="Start"
            android:checked="false"/>
    </RelativeLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_exercise_score"
        android:numStars="5"
        android:stepSize="1"
        android:min="0"
        android:max="5"/>
    <EditText
        android:id="@+id/add_exercise_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="5"
        android:hint="Notes"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/add_exercise_save"
            android:layout_width="184.5dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginRight="20.5dp" />
        <Button
            android:id="@+id/add_exercise_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>
